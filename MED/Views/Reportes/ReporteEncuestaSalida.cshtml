
@{
    ViewBag.Title = "ReporteEncuestaSalida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" style="background-color: #17A2B8; border-radius: 5px; padding: 3px; font-size:20px; height: 60px;">
        <div class="col-md-12" style="color: white">
            <h1 class="text-center">Reporte general de encuestas de salida </h1>
        </div>
    </div>
    <br />
    <form>

        <div class="row justify-content-center">
            <div class="col-md-10">
                <h2 class="text-center">Elija el periodo para obtener el reporte</h2>
            </div>
        </div>

        <br />
        <div class="row align-items-center justify-content-center text-center">


            <div class="col-md-3 form-group">

                <label for="inputsm">Fecha inicial</label>
                <input class="form-control " id="Fechainicio" type="text" maxlength="20">
            </div>
            <div class="col-md-3 form-group">
                <label for="inputsm">Fecha final</label>
                <input class="form-control " id="Fechafin" type="text">
            </div>

            <div class="row" align-items-center justify-content-center>
                <div class="input-group col-md-1">

                    <span class="input-group-append">
                        <button class="btn btn-outline-secondary" id="Buscar2" type="button" style="background-color: aliceblue;" onclick="ReporteEncuestaSalida()">
                            <i class="fas fa-search" style="color:cornflowerblue"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>

        <br />

        <div class="row  text-justify justify-content-center ">
            <div id="tabla" class="row  justify-content-center col-md-11">

            </div>
        </div>
        <br />

    </form>
</div>


<div class="modal fade" id="modalEntrevistador">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header align-items-center" style="background: #4682b4; color: white; justify-content:center;">
                <h4 class="modal-title" id="title">Terminar Salida</h4>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <form id="frmEntrevistador">
                    <div class="row text-center">
                        <div class="form-group col-md-12">
                            <input type="hidden" class="form-control" id="IdEntrevista" name="IdEntrevista" />
                            <label>Último día laborado <strong style="color:red">*</strong></label>
                            <input type="text" class="form-control" id="UltimoDiaLaborado" name="ultimoDiaLaborado" />
                            <label> Comentarios</label>
                            <textarea class="form-control" id="ComentariosEntrevistador" name="Comentarios"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <label id="error" style="color:red" class="col-md-8 text-left"></label>
                <button type="submit" class="col-md-2" style="height:40px; padding:0px !important; background:#17a2b8 !important; border-radius:10px;" onclick="GuardarEntrevistador()">Guardar</button>
                <button type="button" class="col-md-2 btn btn-danger" onclick="LimpiarDatosEntrevistador()" data-dismiss="modal" style="height: 40px; padding: 0px !important;border-radius:10px;">Cerrar</button>

            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#UltimoDiaLaborado').datepicker(dataCalendar);
        Session();
        
    })
</script>

